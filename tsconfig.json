{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",

        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,

        "strict": true,

        "outDir": "./dist/",
        "declaration": true,
        "allowJs": true,

        "forceConsistentCasingInFileNames": true,

        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}